#!/bin/sh

echo "Pre-commit hook running..."
echo "Running lint-staged to check code quality..."

npx lint-staged

if [ $? -ne 0 ]; then
  echo "Pre-commit hook failed. Please fix the errors and try again."
  exit 1
fi

echo "Running type check..."
npm run check

if [ $? -ne 0 ]; then
  echo "TypeScript type check failed. Please fix the type errors and try again."
  exit 1
fi

echo "Pre-commit checks passed!"
