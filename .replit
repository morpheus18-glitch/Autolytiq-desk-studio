[env]
PORT = "5000"

[workflows]
runButton = "Project"

# Main workflow - Start development server
[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

# Build workflow - Production build
[[workflows.workflow]]
name = "Build Production"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

# Test workflow - Run all tests
[[workflows.workflow]]
name = "Run Tests"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test"

# Test with coverage
[[workflows.workflow]]
name = "Test Coverage"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test:coverage"

# Database workflow - Push schema changes
[[workflows.workflow]]
name = "Database Push"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run db:push"

# Type checking workflow
[[workflows.workflow]]
name = "Type Check"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run check"

# Full CI workflow - Run all checks
[[workflows.workflow]]
name = "Full CI Check"
mode = "sequential"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run check"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

# Git workflow - Commit and push
[[workflows.workflow]]
name = "Git Status"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git status && git log --oneline -5"

# Database backup workflow
[[workflows.workflow]]
name = "Database Backup"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pg_dump $DATABASE_URL > backup-$(date +%Y%m%d-%H%M%S).sql && echo 'Backup created successfully'"

# Clean workflow - Remove build artifacts
[[workflows.workflow]]
name = "Clean Build"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf dist node_modules/.vite && echo 'Build artifacts cleaned'"

# Restart server workflow
[[workflows.workflow]]
name = "Restart Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -9 -f 'node|tsx' && sleep 2 && npm run dev"
waitForPort = 5000

[agent]
integrations = ["javascript_openai_ai_integrations:1.0.0", "resend:1.0.0"]
