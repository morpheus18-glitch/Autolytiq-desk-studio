# Environment Variables for Autolytiq Services
# Copy this file to .env and update with your values

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=autolytiq

# Database Connection URL
DATABASE_URL=postgresql://postgres:change_me_in_production@postgres:5432/autolytiq

# API Gateway Configuration
API_GATEWAY_PORT=8080
# For production AWS deployment, update ALLOWED_ORIGINS to:
# ALLOWED_ORIGINS=https://autolytiq.com,https://www.autolytiq.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT Authentication (CRITICAL: Change these in production!)
# Generate a secure secret: openssl rand -base64 32
# Minimum 32 characters required for HMAC-SHA256 security
JWT_SECRET=REPLACE_WITH_32_PLUS_CHARACTER_RANDOM_STRING_FOR_PRODUCTION
JWT_ISSUER=autolytiq-api-gateway

# Service Ports
DEAL_SERVICE_PORT=8081
CUSTOMER_SERVICE_PORT=8082

# Service URLs (for API Gateway)
DEAL_SERVICE_URL=http://deal-service:8081
CUSTOMER_SERVICE_URL=http://customer-service:8082
