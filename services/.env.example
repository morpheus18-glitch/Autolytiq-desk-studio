# ===========================================
# Autolytiq Microservices Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=autolytiq
DATABASE_URL=postgresql://postgres:your-secure-password-here@postgres:5432/autolytiq

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://redis:6379

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# IMPORTANT: Generate a secure random string of at least 32 characters
# Example: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-at-least-32-chars
JWT_ISSUER=autolytiq

# Token TTLs
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

# ===========================================
# SERVICE PORTS
# ===========================================
API_GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8087
DEAL_SERVICE_PORT=8081
CUSTOMER_SERVICE_PORT=8082
INVENTORY_SERVICE_PORT=8083
EMAIL_SERVICE_PORT=8084
USER_SERVICE_PORT=8085
CONFIG_SERVICE_PORT=8086

# ===========================================
# SERVICE URLs (for API Gateway)
# ===========================================
AUTH_SERVICE_URL=http://auth-service:8087
DEAL_SERVICE_URL=http://deal-service:8081
CUSTOMER_SERVICE_URL=http://customer-service:8082
INVENTORY_SERVICE_URL=http://inventory-service:8083
EMAIL_SERVICE_URL=http://email-service:8084
USER_SERVICE_URL=http://user-service:8085
CONFIG_SERVICE_URL=http://config-service:8086

# ===========================================
# CORS
# ===========================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ===========================================
# EMAIL SERVICE (Optional)
# ===========================================
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@autolytiq.com
