# Environment Variables for Autolytiq Services
# Copy this file to .env and update with your values

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=autolytiq

# Database Connection URL
DATABASE_URL=postgresql://postgres:change_me_in_production@postgres:5432/autolytiq

# API Gateway Configuration
API_GATEWAY_PORT=8080
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Service Ports
DEAL_SERVICE_PORT=8081
CUSTOMER_SERVICE_PORT=8082

# Service URLs (for API Gateway)
DEAL_SERVICE_URL=http://deal-service:8081
CUSTOMER_SERVICE_URL=http://customer-service:8082
